<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thanh toán trả trước"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="@color/design_default_color_error"
        />
    <LinearLayout
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Thông tin chuyển khoản"
            android:textSize="30dp"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="Tên TK: Nguyễn Văn A"
            android:textSize="25dp"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="SĐT: 0379055714"
            android:textSize="25dp"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="STK: 0382000477885"
            android:textSize="25dp"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="Ngân hàng: Vietcombank"
            android:textSize="25dp"
            android:textColor="@color/black"
            />
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginBottom="15dp"
               android:text="Tổng tiền thanh toán:"
               android:textSize="25dp"
               android:textColor="@color/black"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginBottom="15dp"
               android:text="  300.000 VNĐ"
               android:textSize="24dp"
               android:textColor="@color/tien"
               />
       </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nội dung thanh toán: Mã hóa đơn hàng + Tên KH + SĐT"
            android:textSize="25dp"
            android:textColor="@color/black"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:padding="10dp">

        <Button
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Trở về"/>
    </LinearLayout>

</LinearLayout>